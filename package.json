{
  "name": "srvs",
  "version": "0.2.5",
  "description": "Zero Dependency Dev Server",
  "files": [
    "src"
  ],
  "main": "./src/server/index.js",
  "bin": {
    "srvs": "./src/index.js"
  },
  "devDependencies": {
    "eslint": "=5.4.0"
  },
  "scripts": {
    "format": "npx prettier --write '{src,examples,!(node_modules)/}/**/*.js'",
    "format:check": "prettier --list-different '{src,examples,!(node_modules)/}/**/*.js'",
    "lint": "eslint src/**/*.js",
    "check": "npm run format:check && npm run lint"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 9
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "no-use-before-define": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/okwolf/srvs.git"
  },
  "author": "Wolfgang Wedemeyer <wolf@okwolf.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/okwolf/srvs/issues"
  },
  "homepage": "https://github.com/okwolf/srvs"
}
